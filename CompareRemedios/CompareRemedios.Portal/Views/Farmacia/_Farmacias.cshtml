@model List<CompareRemedios.Dominio.Entidades.Farmacia>
@using GridMvc.Html
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>



@Html.Grid(Model).Columns(columns =>
{
    /* Adding not mapped column, that renders body, using inline Razor html helper */
    columns.Add()
            .Encoded(false)
            .Sanitized(false)
            .SetWidth(30)
            .RenderValueAs(d =>
                @<b>
                    @Html.ActionLink("Detalhes", "Detalhes", new { Id = d.Id})
                </b>);

    /* Adding "OrderID" column: */
    columns.Add(o => o.NomeFantasia)
.Titled("Nome")
.SetWidth(100);

    /* Adding "OrderID" column: */
    columns.Add(o => o.Endereco)
.Titled("Endereço")
.SetWidth(100);
    /* Adding "OrderID" column: */
    columns.Add(o => o.Bairro)
.Titled("Bairro")
.SetWidth(100);
    /* Adding "OrderID" column: */
    columns.Add(o => o.CEP)
.Titled("CEP")
.SetWidth(100);
    /* Adding "OrderID" column: */
    columns.Add(o => o.Cidade)
.Titled("Cidade")
.SetWidth(100);
    /* Adding "OrderID" column: */
    columns.Add(o => o.Estado)
.Titled("UF")
.SetWidth(100);
}
).WithPaging(15).Sortable().Filterable().WithMultipleFilters()